<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rtpintar.warga.Wargaregisterone">
    <LinearLayout
        android:id="@+id/eko"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="#41C88E"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <ImageButton
            android:id="@+id/backbuttwarga"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/chevron_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_settings_gears_1"

            android:gravity="center_horizontal"
            android:text=" Registrasi Kepala Keluarga"
            android:textColor="#F3F0F0"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>
    <include
        android:layout_marginTop="10dp"
        layout="@layout/content_wargaregisterone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
       android:layout_below="@+id/eko"
        android:layout_alignParentEnd="true"
     />

</RelativeLayout>